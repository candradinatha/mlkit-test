<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="android:textViewStyle">@color/colorSecondary</item>

        <item name="textInputStyle">@style/AppTheme.TextInputLayout</item>
        <item name="autoCompleteTextViewStyle">@style/AppTheme.TextInputLayout</item>
        <item name="toolbarStyle">@style/AppTheme.AppBarStyle</item>
        <item name="materialCardViewStyle">@style/AppTheme.CardView</item>
        <item name="materialButtonStyle">@style/AppTheme.UnelevatedButton</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/background</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeColor">@color/color_grey_primary</item>
        <item name="boxCornerRadiusTopStart">@dimen/til_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/til_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/til_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/til_radius</item>
    </style>

    <style name="AppTheme.TextInputAutoComplete" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu" >
        <item name="boxBackgroundMode">outline</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="boxBackgroundColor">@color/transparent</item>
    </style>

    <style name="AppTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/elevate</item>
        <item name="cardCornerRadius">@dimen/half_app_margin</item>
    </style>

    <style name="AppTheme.UnelevatedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">16dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/background</item>
    </style>

    <style name="AppTheme.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Subtitle</item>
    </style>

    <style name="AppTheme.AppBarStyle" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:textAlignment">center</item>
        <item name="titleTextColor">@color/colorPrimaryVariant</item>
        <item name="subtitleTextColor">@color/divider_color</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="titleTextColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabMode">fixed</item>
    </style>

    <!--    bottom sheet-->
    <style name="AppTheme.BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogCorner</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="BottomSheetDialogCorner" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="android:background">@drawable/bottom_sheet_background_elevation</item>
    </style>


    <style name="AppTheme.TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorPrimaryVariant</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>

    <style name="AppTheme.TextAppearance.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="AppTheme.SmallText">
        <item name="android:textColor">@color/small_text_color</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="AppTheme.MediumText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.ToolbarText">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.LargeText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
